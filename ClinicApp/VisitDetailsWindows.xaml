<Window x:Class="ClinicApp.VisitDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Информация о визите" Height="450" Width="400">
	<Grid>
		<StackPanel Margin="10">
			<TextBlock Text="Информация о визите:" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>

			<TextBlock Text="Дата:" FontWeight="Bold"/>
			<TextBlock x:Name="VisitDateTextBlock" Margin="0,0,0,5"/>

			<TextBlock Text="Врач:" FontWeight="Bold"/>
			<TextBlock x:Name="DoctorTextBlock" Margin="0,0,0,5"/>

			<TextBlock Text="Пациент:" FontWeight="Bold"/>
			<TextBlock x:Name="PatientTextBlock" Margin="0,0,0,5"/>

			<TextBlock Text="Диагноз:" FontWeight="Bold"/>
			<TextBlock x:Name="DiagnosisTextBlock" Margin="0,0,0,5"/>

			<TextBlock Text="Комментарии:" FontWeight="Bold"/>
			<TextBlock x:Name="CommentsTextBlock" Margin="0,0,0,5"/>

			<TextBlock Text="Лечение:" FontWeight="Bold"/>
			<TextBlock x:Name="TreatmentTextBlock" Margin="0,0,0,5"/>

			<TextBlock Text="Больничный:" FontWeight="Bold"/>
			<TextBlock x:Name="SickLeaveTextBlock" Margin="0,0,0,5"/>
		</StackPanel>
	</Grid>
</Window>
