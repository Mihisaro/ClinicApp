<Window x:Class="ClinicApp.AddVisitWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавить Прием" Height="600" Width="400">
    <Grid>
        <StackPanel>
            <!-- Дата приема -->
            <TextBlock Text="Дата приема" />
            <DatePicker Name="VisitDatePicker" Width="300" Margin="10" />

            <!-- Пациент -->
            <TextBlock Text="Выберите пациента" />
            <ComboBox Name="DoctorComboBox" Width="300" Margin="10" />
            <!-- Врач -->
            <TextBlock Text="Выберите врача" />
            <ComboBox Name="PatientsComboBox" Width="300" Margin="10" />
            
            <!-- Диагноз -->
            <TextBlock Text="Диагноз" />
            <TextBox Name="DiagnosisTextBox" Width="300" Margin="10" />

            <!-- Комментарии -->
            <TextBlock Text="Комментарии" />
            <TextBox Name="CommentsTextBox" Width="300" Margin="10" />

            <!-- Лечение (Лекарства) -->
            <TextBlock Text="Лекарства" />
            <TextBox Name="MedicationsTextBox" Width="300" Margin="10" />

            <!-- Процедуры -->
            <TextBlock Text="Процедуры" />
            <TextBox Name="ProceduresTextBox" Width="300" Margin="10" />

            <!-- Тесты -->
            <TextBlock Text="Тесты" />
            <TextBox Name="TestsTextBox" Width="300" Margin="10" />

            <!-- Больничный лист -->
            <TextBlock Text="Начало больничного" />
            <DatePicker Name="SickLeaveStartDatePicker" Width="300" Margin="10" />
            <TextBlock Text="Конец больничного" />
            <DatePicker Name="SickLeaveEndDatePicker" Width="300" Margin="10" />

            <Button Content="Добавить прием" Width="300" Margin="10" Click="AddVisit_Click"/>
        </StackPanel>
    </Grid>
</Window>
