<Window x:Class="ClinicApp.AddPatientWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавить Пациента" Height="670" Width="400">
    <Grid>
        <StackPanel>
            <TextBlock Text="Номер карты" />
            <TextBox Name="CardNumberTextBox" Width="300" Margin="10" />
            
            <TextBlock Text="Ф.И.О." />
            <TextBox Name="FullNameTextBox" Width="300" Margin="10" />

            <TextBlock Text="Адрес" />
            <TextBox Name="AddressTextBox" Width="300" Margin="10" />

            <TextBlock Text="Пол" />
            <TextBox Name="GenderTextBox" Width="300" Margin="10" />

            <TextBlock Text="Год рождения" />
            <TextBox Name="BirthYearTextBox" Width="300" Margin="10" />

            <TextBlock Text="Пенсионер" />
            <CheckBox Name="IsPensionerCheckBox" Margin="10" />

            <TextBlock Text="Номер полиса" />
            <TextBox Name="InsurancePolicyNumberTextBox" Width="300" Margin="10" />

            <TextBlock Text="Преимущества" />
            <TextBox Name="BenefitsTextBox" Width="300" Margin="10" />

            <!-- Добавление визитов -->
            <TextBlock Text="Дата визита" />
            <DatePicker Name="VisitDatePicker" Margin="10" />
            <TextBlock Text="Диагноз" />
            <TextBox Name="DiagnosisTextBox" Width="300" Margin="10" />
            <TextBlock Text="Комментарии" />
            <TextBox Name="CommentsTextBox" Width="300" Margin="10" />

            <Button Content="Добавить пациента" Width="300" Margin="10" Click="AddPatient_Click"/>
        </StackPanel>
    </Grid>
</Window>
