<Window x:Class="ClinicApp.AddDoctorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавить Врача" Height="800" Width="400">
    <Grid>
        <StackPanel>
            <!-- Ввод информации о враче -->
            <TextBlock Text="Ф.И.О." />
            <TextBox Name="FullNameTextBox" Width="300" Margin="10" />

            <TextBlock Text="Год рождения" />
            <TextBox Name="BirthYearTextBox" Width="300" Margin="10" />

            <TextBlock Text="Специальность" />
            <TextBox Name="SpecializationTextBox" Width="300" Margin="10" />

            <TextBlock Text="Образование" />
            <TextBox Name="EducationTextBox" Width="300" Margin="10" TextChanged="EducationTextBox_TextChanged" />

            <TextBlock Text="Университет" />
            <TextBox Name="UniversityTextBox" Width="300" Margin="10" />

            <TextBlock Text="Год выпуска" />
            <TextBox Name="GraduationYearTextBox" Width="300" Margin="10" TextChanged="GraduationYearTextBox_TextChanged" />

            <TextBlock Text="Стаж" />
            <TextBox Name="ExperienceTextBox" Width="300" Margin="10" />

            <TextBlock Text="Телефон" />
            <TextBox Name="PhoneNumberTextBox" Width="300" Margin="10" />

            <TextBlock Text="Путь к фото" />
            <TextBox Name="PhotoPathTextBox" Width="300" Margin="10" />

            <!-- Ввод информации о расписании -->
            <TextBlock Text="День недели" />
            <TextBox Name="ScheduleDayTextBox" Width="300" Margin="10" />

            <TextBlock Text="Время начала (HH:mm)" />
            <TextBox Name="ScheduleStartTimeTextBox" Width="300" Margin="10" />

            <TextBlock Text="Время окончания (HH:mm)" />
            <TextBox Name="ScheduleEndTimeTextBox" Width="300" Margin="10" />

            <TextBlock Text="Комната" />
            <TextBox Name="ScheduleRoomTextBox" Width="300" Margin="10" />

            <!-- Кнопка добавления врача -->
            <Button Content="Добавить врача" Width="300" Margin="10" Click="AddDoctor_Click"/>
        </StackPanel>
    </Grid>
</Window>
